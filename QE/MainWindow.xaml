<Window   x:Class="QE.MainWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          mc:Ignorable="d"
          Name="MaimWindow"
          xmlns:local="clr-namespace:QE" 
          WindowState="Maximized" d:DesignWidth="721.88">
    <Grid x:Name="GridMain" Margin="40,40,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Верхний заголовок -->
        <Grid Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- первая колонка с автоматической шириной -->
                <ColumnDefinition Width="Auto" />
                <!-- вторая колонка с динамической шириной -->
                <ColumnDefinition Width="Auto" />
                <!-- первая колонка с автоматической шириной -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0">
                <Button  Background="#fff" Padding="15" FontSize="18" FontWeight="DemiBold" Foreground="#700" BorderBrush="#eee" Width="250">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                        Оценить качество обслуживания
                    </TextBlock>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Button Background="#fff" Padding="15" FontSize="18" FontWeight="DemiBold" Foreground="#700" BorderBrush="#eee" Width="250">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                      Получить информацию о талоне
                    </TextBlock>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2">
                <Button Background="#fff" Padding="15" FontSize="18" FontWeight="DemiBold" Foreground="#700" BorderBrush="#eee" Width="250">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                      Регистрация по предворительной записи
                    </TextBlock>
                </Button>
            </StackPanel>
            <TextBlock x:Name="HeaderTextBlock" HorizontalAlignment="Right" Margin="10" Grid.Column="3" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
        </Grid>

        <!-- Область содержимого -->
        <Border Grid.Row="1" BorderBrush="#eee" BorderThickness="1" Background="#fff" VerticalAlignment="Center" >
            <StackPanel x:Name="BodyWindow">
                <StackPanel x:Name="Menu" Orientation="Horizontal" VerticalAlignment="Center" Height="Auto">
                </StackPanel>
                <StackPanel x:Name="Buttons" Orientation="Horizontal" VerticalAlignment="Center" Height="Auto">
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Нижний колонтитул -->
        <Grid Grid.Row="2" Height="150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="StackClose" Visibility="Collapsed">
                <Button Background="#eef" Padding="15" FontSize="18" FontWeight="DemiBold" Foreground="#700" BorderBrush="#eee" Width="200" x:Name="CloseButton">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                       Назад
                    </TextBlock>
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Vertical" Grid.Column="1" Width="449" Height="139"  Name="ImageFooter"/>
        </Grid>
    </Grid>
</Window> 