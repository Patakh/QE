<Window   x:Class="QE.MainWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          mc:Ignorable="d"
          Name="MaimWindow"
          xmlns:local="clr-namespace:QE" 
          WindowState="Maximized" d:DesignWidth="721.88">
    <Window.Resources>
        <StackPanel Orientation="Vertical" x:Key="Keyboard" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="1" Width="40" Height="40"  />
                <Button Content="2" Width="40" Height="40" />
                <Button Content="3" Width="40" Height="40" />
                <Button Content="4" Width="40" Height="40" />
                <Button Content="5" Width="40" Height="40" />
                <Button Content="6" Width="40" Height="40" />
                <Button Content="7" Width="40" Height="40" />
                <Button Content="8" Width="40" Height="40" />
                <Button Content="9" Width="40" Height="40" />
                <Button Content="0" Width="40" Height="40" />
                <Button Content="-" Width="40" Height="40" />
                <Button Content="Удалить" Width="75" Height="40" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Q" Width="40" Height="40" />
                <Button Content="W" Width="40" Height="40" />
                <Button Content="E" Width="40" Height="40" />
                <Button Content="R" Width="40" Height="40" />
                <Button Content="T" Width="40" Height="40" />
                <Button Content="Y" Width="40" Height="40" />
                <Button Content="U" Width="40" Height="40" />
                <Button Content="I" Width="40" Height="40" />
                <Button Content="O" Width="40" Height="40" />
                <Button Content="P" Width="40" Height="40" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="A" Width="40" Height="40" />
                <Button Content="S" Width="40" Height="40" />
                <Button Content="D" Width="40" Height="40" />
                <Button Content="F" Width="40" Height="40" />
                <Button Content="G" Width="40" Height="40" />
                <Button Content="H" Width="40" Height="40" />
                <Button Content="J" Width="40" Height="40" />
                <Button Content="K" Width="40" Height="40" />
                <Button Content="L" Width="40" Height="40" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Shift" Width="75" Height="40" />
                <Button Content="Z" Width="40" Height="40" />
                <Button Content="X" Width="40" Height="40" />
                <Button Content="C" Width="40" Height="40" />
                <Button Content="V" Width="40" Height="40" />
                <Button Content="B" Width="40" Height="40" />
                <Button Content="N" Width="40" Height="40" />
                <Button Content="M" Width="40" Height="40" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Пробел" Width="250" Height="40" /> 
                <Button Content="Очистить" Width="75" Height="40" />
                <Button Content="Ввод" Width="75" Height="40" /> 
            </StackPanel>
        </StackPanel>
    </Window.Resources>
    <Grid x:Name="GridMain" Margin="40,40,40,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Верхний заголовок -->
        <Grid Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- первая колонка с автоматической шириной -->
                <ColumnDefinition Width="Auto" />
                <!-- вторая колонка с динамической шириной -->
                <ColumnDefinition Width="Auto" />
                <!-- первая колонка с автоматической шириной -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0">
                <Button  Background="#fff" Padding="15" FontSize="18" FontWeight="DemiBold" Foreground="#700" BorderBrush="#eee" Width="250" x:Name="Button_Click_Estimate">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                        Оценить качество обслуживания
                    </TextBlock>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Button Background="#fff" Padding="15" FontSize="18" FontWeight="DemiBold" Foreground="#700" BorderBrush="#eee" Width="250">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                      Получить информацию о талоне
                    </TextBlock>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2">
                <Button Background="#fff" Padding="15" FontSize="18" FontWeight="DemiBold" Foreground="#700" BorderBrush="#eee" Width="250">
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                      Регистрация по предворительной записи
                    </TextBlock>
                </Button>
            </StackPanel>
            <TextBlock x:Name="HeaderTextBlock" HorizontalAlignment="Right" Margin="10" Grid.Column="3" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
        </Grid>

        <!-- Область содержимого -->
        <Border Grid.Row="1" BorderBrush="#eee" BorderThickness="1" Background="#fff" VerticalAlignment="Center" >
            <StackPanel x:Name="BodyWindow">
                <StackPanel x:Name="Menu" Orientation="Horizontal" VerticalAlignment="Center" Height="Auto">
                </StackPanel>
                <StackPanel x:Name="Buttons" Orientation="Horizontal" VerticalAlignment="Center" Height="Auto">
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Нижний колонтитул -->
        <Grid Grid.Row="2" Height="150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="StackClose" Visibility="Collapsed">
                <Button Width="180" Height="140" x:Name="CloseButton" BorderBrush="Transparent"> 
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Vertical" Grid.Column="1" Width="449" Height="139"  Name="ImageFooter"/>
        </Grid>
    </Grid>
</Window> 